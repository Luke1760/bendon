<h1>使用者註冊</h1>

<%#= form_for(User.new, url: '/sign_up', method: 'POST') do |f| %>
<%# 使用controller裡的@user取代User.new %>
<%= form_for(@user, url: '/sign_up', method: 'POST') do |f|%>

  <%= if @user.error.any? %>
    <ul>
      <% @user.errors.full.messages.each do | msg | %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    <% end %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
  </div>

  <%= f.submit '註冊' %>

  <% end %>